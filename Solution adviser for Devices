#include <stdio.h>
int main(){
	int device,type;
	printf("Enter Device type.\nFor Laptop 1\nFor Smartphone 2\nFor Router 3\n");
	scanf(" %d", &device);
	switch (device){
		case 1 :{
		printf("Enter Symptom code\n10 for Won't turn on.\n11 for Overheating.\n12 for Slow performance.\n");
		scanf(" %d", &type);
		switch (type){
			case 10 :
				printf("Check power adapter and battery connections. Try a different power outlet. Remove battery and hold power buttonfor 30 seconds.");
				break;
			case 11 :
				printf("Clean fans and ensure proper ventilation. Check for dust accumulation. Use a cooling pad. Monitor CPU usage.");
				break;
			case 12 :
				printf("Run system diagnostics and check resource usage. Scan for malware. Upgrade RAM if necessary. Defragment hard drive.");
				break;
			default :
			printf("Invalid symptom code.");
			break;}
			break;
		}
		case 2 :{
		printf("Enter Symptom code\n20 for Battery drains fast.\n21 for No signal\n22 for Touchscreen unresponsive.\n");
		scanf(" %d", &type);
		switch (type){
			case 20 :
				printf("Run battery calibration tool and check for background apps. Reduce screen brightness. Disable unnecessary connectivity features.\n");
				break;
			case 21 :
				printf("Check SIM card and network settings. Toggle airplane mode. Update carrier settings. Check for network outages.\n");
				break;
			case 22 :
				printf("Perform screen calibration test. Clean screen surface. Restart device. Check for software updates.\n");
				break;
			default :
			printf("Invalid symptom code.");
			break;}
			break;
		}
		case 3 :
		{
		printf("Enter Symptom code\n30 for No internet connection.\n31 for Wi-Fi signal weak.\n32 for Device can''t connect.\n");
		scanf(" %d", &type);
		switch (type){
			case 30 :
				printf("Check ISP status and router cables. Restart modem and router. Check WAN connection settings. Verify internet subscription.\n");
				break;
			case 31 :
				printf("Reposition router and check antenna connections. Reduce interference from other devices. Change Wi-Fi channel. Consider range extender.\n");
				break;
			case 32 :
				printf("Check MAC filtering and DHCP settings. Verify Wi-Fi password. Restart connecting device. Check for IP conflicts.\n");
				break;
					default :
			printf("Invalid symptom code.\n");
			break;	
		}
		break;
		}
		default :
		printf("Invalid Device.\n");
		break;
	}
return 0;
}
